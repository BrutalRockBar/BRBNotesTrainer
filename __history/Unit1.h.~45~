class DataBase
{
  public:
  class TTable1
  {
   public:
   AnsiString name;
   AnsiString nomer_key;
   AnsiString kod_key;
   AnsiString XY1_note;
   AnsiString XY2_note;
   AnsiString mode_line;
   AnsiString kol_line;
  };
  TTable1 *Table;

  void TableSet()
  {
   Table->name = "Клавиши";
   Table->nomer_key = "Номер";
   Table->kod_key = "Код";
   Table->XY1_note = "Координата ноты 1";
   Table->XY2_note = "Координата ноты 2";
   Table->mode_line = "Положение линии";
   Table->kol_line = "Кол-во линий";
  }
};

